<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tonydarko.decoder.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/vocabulary"
        android:text="Codes"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvibbin"
        android:gravity="center"
        android:layout_marginTop="@dimen/main_tv_margin_top"
        android:text="Закодировать"
        android:textSize="@dimen/main_tv_text_size_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ed_to_bin"
        android:gravity="center"
        android:hint="Сюда текст"
        android:textSize="@dimen/main_tv_text_size_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnToBin"
        android:text="Go Bin"
        android:background="@color/colorC"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/clear"
            android:background="@color/colorA"
            android:text="||"
         android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvinstr"
        android:gravity="center"
        android:layout_marginTop="@dimen/main_tv_margin_top"
        android:text="@string/main_tv_decod"
        android:textSize="@dimen/main_tv_text_size_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_to_string"
        android:gravity="center"
        android:hint="Сюда 0101000"
        android:textSize="@dimen/main_tv_text_size_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnToString"
        android:text="Go String"
        android:background="@color/colorB"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:background="@color/colorD"
            android:id="@+id/clear2"
            android:text="||"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
